{
    "name": "heronational/php-qrcode",
    "description": "Générateur de QR Codes performant en PHP avec options avancées",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jacobin Daniel Fokou",
            "email": "danieluokof@gmail.com"
        }
    ],
    "homepage": "https://github.com/heronational/php-qrcode",
    "keywords": [
        "qr-code",
        "php",
        "generator",
        "endroid",
        "barcode"
    ],
    "require": {
        "php": "^7.4",
        "league/csv": "^9.0",
        "endroid/qr-code": "^4.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "HeroNational\\PhpQrCode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HeroNational\\PhpQrCode\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs --standard=PSR12 src tests"
    },
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}